extends ../layout.jade
block body
  include ../toolbar.jade
  .container-fluid(style="min-height: 400px;")
    .row
      .col-md-2.hidden-sm.hidden-xs
        .bs-sidebar(hidden-print, role="complementary")
          ul.nav.bs-sidenav
            each nav in navs
              li
                a(href="\##{nav.target}") #{nav.name}
      .col-md-10
        h1.anchor-static-navbar#gallery
        .page-header
          h1 Galerie
        each content in contents
          h2.anchor-static-navbar(id="#{content.name}")
          h2.page-header #{content.title}
          div!= content.content
          div(style="display:inline-block;")
            each image in images[content.name]
              a.pull-left(href="/"+config.paths.gallery+"/"+image.original.name, style="height:100px;width:100px;padding:2px")
                img.img-responsive(src="/"+config.paths.gallery+"/"+image.thumb.name)
  include ../footer.jade
