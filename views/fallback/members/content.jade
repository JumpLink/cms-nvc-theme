extends ../layout.jade
block body
  include ../toolbar.jade
  .container-fluid(style="min-height: 400px;")
    .row
      .col-md-2.hidden-sm.hidden-xs
      .col-md-10
        h1.page-header Vorstand / Beirat
        .row(style='text-align: center;')
           each member in members
            .col-lg-3.col-md-4.col-sm-6.member
              img.img-circle(alt=!member.name, src='/'+config.paths.members+'/'+member.image, style='width: 140px; height: 140px;')
              h2
                div!= member.name
                small!= member.job
  include ../footer.jade
